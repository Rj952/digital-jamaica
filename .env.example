# ─── Digital Jamaica Environment Variables ───
# Copy this file to .env.local and fill in your values

# AI Integration (for Jamaica Guide feature)
# Get your API key from https://console.anthropic.com
NEXT_PUBLIC_AI_ENABLED=false
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# App Configuration
NEXT_PUBLIC_APP_NAME=Digital Jamaica
NEXT_PUBLIC_APP_URL=https://digital-jamaica.vercel.app
NEXT_PUBLIC_APP_VERSION=1.0.0

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_GUIDE=true
NEXT_PUBLIC_ENABLE_KNOWLEDGE_EXCHANGE=true
NEXT_PUBLIC_ENABLE_YOUTH_MODE=true
NEXT_PUBLIC_ENABLE_PARISH_COMMUNITIES=true
NEXT_PUBLIC_ENABLE_RETURN_GUIDE=true
